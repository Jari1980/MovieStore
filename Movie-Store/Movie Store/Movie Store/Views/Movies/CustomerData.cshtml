@model IEnumerable<Movie_Store.Models.ViewModells.OrderVM>

@{
    ViewData["Title"] = "CustomerData";
}



<h1>CustomerData</h1>

<td><h2>@Model.ElementAt(0).FirstName @Model.ElementAt(0).LastName </h2><br /><br /></td>

@{
    int counter = Model.Count();
    double totalExp = 0;

    foreach(var item in Model)
    {
        totalExp = totalExp + item.Price;
    }


    @foreach(var item in Model)
    {
    <span>Order Id:@item.Order</span>
    <br />
    <span>Order Row Id:@item.OrderRow</span>
    <br />
    <span>Movie Title: @item.Title</span>
    <br />
    <span>Price: @item.Price</span>
    <br />
    <span>___________</span>
    <br />
    }
    <br />
    <span>Total count of orders: @counter</span>
    <br />
    <span>Sum for all purchases: @totalExp</span>

}



